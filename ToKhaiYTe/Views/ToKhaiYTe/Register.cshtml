@model ToKhaiYTeViewModel
@inject ToKhaiYTeContext context

@{
    var GateList = context.Gates.ToList();
    var YearList = context.Years.ToList();
    var MonthList = context.Months.ToList();
    var DayList = context.Days.ToList();
    var ProvinceList = context.Province.ToList();
    var DistrictList = context.District.ToList();
    var WardList = context.Ward.ToList();

}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Hệ thống thông tin quản lý Khai báo Y tế</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <form asp-controller="ToKhaiYTe" asp-action="Register">
        <div class="text-center mt-5">
            <h4><strong> TỜ KHAI Y TẾ ĐỐI VỚI NGƯỜI NHẬP CẢNH</strong></h4>
            <h5 class="mt-5"><strong> ĐÂY LÀ TÀI LIỆU QUAN TRỌNG, THÔNG TIN CỦA ANH/CHỊ SẼ GIÚP CƠ QUAN Y TẾ LIÊN LẠC KHI CẦN THIẾT ĐỂ PHÒNG CHỐNG DỊCH BỆNH TRUYỀN NHIỄM</strong></h5>
            <h5 class="mt-4" style="color: red">Khuyến cáo: Khai báo thông tin sai là vi phạm pháp luật Việt Nam và có thể xử lý hình sự</h5>
        </div>

        <hr />
        <div class="form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class=" row form-group col">
                <div style="width: 22.5%">
                    <label asp-for=" GatesId">Cửa khẩu <i style="color:red">(*)</i></label>
                </div>
                <div class=" col-3 ">
                    <select asp-for=" GatesId" asp-items="@(new SelectList(GateList, "Id", "GateName"))" class="form-control ">
                        <option>-Chọn-</option>
                    </select>
                    <span asp-validation-for=" GatesId" class=" text-danger"></span>
                </div>
            </div>
            <div class=" row form-group col">
                <div style="width: 22.5%">
                    <label asp-for=" HoVaTen">Họ tên (ghi chữ IN HOA) <i style="color:red">(*)</i></label>
                </div>
                <div class=" col-4">
                    <input asp-for=" HoVaTen" class=" form-control text-uppercase" />
                    <span asp-validation-for=" HoVaTen" class=" text-danger"></span>
                </div>
            </div>
            <div class=" row form-group col">
                <div class=" col-8">
                    <div class=" row">
                        <div style="width: 33.85%">
                            <label asp-for="YearId">Năm sinh<i style="color:red">(*)</i></label>
                        </div>
                        <div class=" col-auto ">
                            <select asp-for=" YearId" asp-items="@(new SelectList(YearList, "Id", "Year"))" class="form-control">
                                <option value="">Năm</option>
                            </select>
                            <span asp-validation-for=" YearId" class=" text-danger"></span>
                        </div>
                        <div class="col-auto">
                            <label asp-for=" GioiTinh">Giới tính<i style="color:red">(*)</i></label>
                        </div>
                        <div class=" col-4">
                            <select asp-for=" GioiTinh" class="form-control">
                                <option value="">---Chọn---</option>
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                                <option value="Khác">Khác</option>
                            </select>
                            <span asp-validation-for=" GioiTinh" class=" text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class=" row form-group">
                <div class=" col-auto">
                    <label asp-for=" SoHoChieu">Số hộ chiếu hoặc giấy thông hành hợp pháp khác<i style="color:red">(*)</i></label>
                </div>
                <div class=" col-4">
                    <input asp-for="SoHoChieu" class=" form-control" />
                    <span asp-validation-for="SoHoChieu" class=" text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label>Thông tin đi lại <em style="color:red">(*)</em></label>
                <label>Tàu Bay</label>
                <input type="checkbox" asp-for="ThongTinDiChuyen.TauBay" />
                <label>Tàu Thuyền</label>
                <input type="checkbox" asp-for="ThongTinDiChuyen.TauThuyen" />
                <label>Ô tô</label>
                <input type="checkbox" asp-for="ThongTinDiChuyen.Oto" />
                <label>Khác(Ghi rõ)</label>
                <input type="text" class="form-control" asp-for="ThongTinDiChuyen.Khac" />
            </div>

            <div class=" row form-group mt-5">
                <div class="row col-6">
                    <div class="col-5">
                        <label asp-for="ThongTinDiChuyen.SoHieuPhuongTien">Số hiệu phương tiện<i style="color:red">(*)</i></label>
                    </div>
                    <div class=" col-7">
                        <input asp-for=" ThongTinDiChuyen.SoHieuPhuongTien" class=" form-control" />
                        <span asp-validation-for=" ThongTinDiChuyen.SoHieuPhuongTien" class=" text-danger"></span>
                    </div>
                </div>

                <div class="row col-6">
                    <div class=" col-5">
                        <label asp-for="ThongTinDiChuyen.SoGhe">Số ghế<i style="color:red">(*)</i></label>
                    </div>
                    <div class=" col-7">
                        <input asp-for=" ThongTinDiChuyen.SoGhe" class=" form-control" />
                        <span asp-validation-for=" ThongTinDiChuyen.SoGhe" class=" text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row form-group">
                <div class="row col-6">
                    <div class="col-5">
                        <label>Ngày khởi hành<i style="color:red">(*)</i></label>
                    </div>
                    <div class=" col">
                        <select asp-for="ThongTinDiChuyen.DayId" asp-items="@(new SelectList(DayList, "Id", "Day"))" class="form-control">
                            <option value="">Ngày</option>
                        </select>
                    </div>
                    <div>
                        <select asp-for="ThongTinDiChuyen.MonthId" asp-items="@(new SelectList(MonthList, "Id", "Month"))" class="form-control ">
                            <option value="">Tháng</option>
                        </select>
                    </div>
                    <div class=" col">
                        <select asp-for="ThongTinDiChuyen.YearId" asp-items="@(new SelectList(YearList, "Id", "Year"))" class="form-control ">
                            <option value="">Năm</option>
                        </select>
                    </div>
                </div>

                <div class="row col-6">
                    <div class=" col-5">
                        <label>Ngày nhập cảnh<i style="color:red">(*)</i></label>
                    </div>
                    <div class=" col">
                        <select asp-for="ThongTinDiChuyen.DayId" asp-items="@(new SelectList(DayList, "Id", "Day"))" class="form-control">
                            <option value="">Ngày</option>
                        </select>
                    </div>
                    <div>
                        <select asp-for="ThongTinDiChuyen.MonthId" asp-items="@(new SelectList(MonthList, "Id", "Month"))" class="form-control ">
                            <option value="">Tháng</option>
                        </select>
                    </div>
                    <div class=" col">
                        <select asp-for="ThongTinDiChuyen.YearId" asp-items="@(new SelectList(YearList, "Id", "Year"))" class="form-control ">
                            <option value="">Năm</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <div class="row form-group mt-5">
            <div class="row col-6">
                <div class="col-5">
                    <label>Địa điểm khởi hành<i style="color:red">(*)</i></label>
                </div>
                <div class=" col-7">
                    @Html.DropDownListFor(p => p.ThongTinLienLac.ProvinceId,
                   new SelectList(ProvinceList, "Id", "Name", "--Chon--"), new { @class = "form-control" })
                    <span asp-validation-for=" ThongTinLienLac.ProvinceId" class=" text-danger"></span>
                </div>
            </div>

            <div class="row col-6">
                <div class=" col-5">
                    <label>Địa điểm nơi đến<i style="color:red">(*)</i></label>
                </div>
                <div class=" col-7">
                    @Html.DropDownListFor(p => p.ThongTinLienLac.ProvinceId,
                   new SelectList(ProvinceList, "Id", "Name", "--Chon--"), new { @class = "form-control" })
                    <span asp-validation-for=" ThongTinLienLac.ProvinceId" class=" text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label>Trong vòng 21 ngày qua, Anh/Chị có đến quốc gia/vùng lãnh thổ nào? <em style="color:red">(*)</em></label>
            <input class="form-control" type="text" asp-for="ThongTinDiChuyen.TrongVong21Ngay" />
        </div>

        <h4><strong>Địa chỉ liên lạc tại Việt Nam</strong></h4>


        <div class="row" style="display:flex">
            <div class="col-4">
                <div>
                    <div form-group inline-block form-inline label-width>
                        <label>Tỉnh thành <em style="color:red">(*)</em></label>
                        @Html.DropDownListFor(h => h.ThongTinLienLac.ProvinceId,
                        new SelectList(ProvinceList, "Id", "Name"),
                        new { @id = "Province", @class = "form-control " })
                    </div>
                </div>
            </div>

            <div class="col-4">
                <div>
                    <div form-group inline-block form-inline label-width>
                        <label>Quận Huyện<em style="color:red">(*)</em></label>
                        @Html.DropDownListFor(h => h.ThongTinLienLac.DistrictId,
                        new SelectList(DistrictList, "Id", "Name", "15"),
                        new { @id = "District", @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="col-4">
                <div>
                    <div form-group inline-block form-inline label-width>
                        <label>Phường Xã <em style="color:red">(*)</em></label>
                        @Html.DropDownListFor(h => h.ThongTinLienLac.WardId,
                        new SelectList(WardList, "Id", "Name", "15"),
                        new { @id = "Ward", @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col">
                <div form-group inline-block form-inline label-width>
                    <label>Địa Chỉ<em style="color:red">(*)</em></label>
                    <input class="form-control" type="text" asp-for="ThongTinLienLac.HouseNum" />
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <div form-group inline-block form-inline label-width>
                    <label>Điện thoại<em style="color:red">(*)</em></label>
                    <input class="form-control" type="number" asp-for="ThongTinLienLac.PhoneNum" />
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <div form-group inline-block form-inline label-width>
                    <label>Email<em style="color:red">(*)</em></label>
                    <input class="form-control" type="email" asp-for="ThongTinLienLac.Email" />
                </div>
            </div>
        </div>
        <div class="row d-block mt-3">
            <div class="col-lg-6 col-sm-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Triệu chứng</th>
                            <th width="60" class="text-center">Có</th>
                            <th width="60" class="text-center">Không</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Sốt <em style="color:red">(*)</em><span class="text-required"></span></td>
                            <td class="text-center">@Html.RadioButtonFor(m => m.DauHieu.Sot, true)</td>
                            <td class="text-center">@Html.RadioButtonFor(m => m.DauHieu.Sot, false)</td>
                        </tr>
                        <tr>
                            <td>Ho <em style="color:red">(*)</em><span class="text-required"></span></td>
                            <td class="text-center">@Html.RadioButtonFor(m => m.DauHieu.Ho, true)</td>
                            <td class="text-center">@Html.RadioButtonFor(m => m.DauHieu.Ho, false)</td>
                        <tr>

                        <tr>
                            <td>Khó thở <em style="color:red">(*)</em><span class="text-required"></span></td>
                            <td class="text-center">@Html.RadioButtonFor(m => m.DauHieu.KhoTho, true)</td>
                            <td class="text-center">@Html.RadioButtonFor(m => m.DauHieu.KhoTho, false)</td>
                        <tr>
                        <tr>
                            <td>Đau họng <em style="color:red">(*)</em><span class="text-required"></span></td>
                            <td class="text-center">@Html.RadioButtonFor(m => m.DauHieu.DauHong, true)</td>
                            <td class="text-center">@Html.RadioButtonFor(m => m.DauHieu.DauHong, false)</td>
                        <tr>
                    </tbody>
                </table>
            </div>

            <div class="col-lg-6 col-sm-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Triệu chứng</th>
                            <th width="60" class="text-center">Có</th>
                            <th width="60" class="text-center">Không</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Nôn/buồn nôn <em style="color:red">(*)</em><span class="text-required"></span></td>
                            <td class="text-center">@Html.RadioButtonFor(m => m.DauHieu.BuonNon, true)</td>
                            <td class="text-center">@Html.RadioButtonFor(m => m.DauHieu.BuonNon, false)</td>
                        </tr>
                        <tr>
                            <td>Tiêu chảy <em style="color:red">(*)</em><span class="text-required"></span></td>
                            <td class="text-center">@Html.RadioButtonFor(m => m.DauHieu.TieuChay, true)</td>
                            <td class="text-center">@Html.RadioButtonFor(m => m.DauHieu.TieuChay, false)</td>
                        </tr>
                        <tr>
                            <td>Xuất huyết ngoài da <em style="color:red">(*)</em><span class="text-required"></span></td>
                            <td class="text-center">@Html.RadioButtonFor(m => m.DauHieu.XuatHuyetNgoaiDa, true)</td>
                            <td class="text-center">@Html.RadioButtonFor(m => m.DauHieu.XuatHuyetNgoaiDa, false)</td>
                        </tr>
                        <tr>
                            <td>Nổi ban ngoài da <em style="color:red">(*)</em><span class="text-required"></span></td>
                            <td class="text-center">@Html.RadioButtonFor(m => m.DauHieu.NoiBanNgoaiDa, true)</td>
                            <td class="text-center">@Html.RadioButtonFor(m => m.DauHieu.NoiBanNgoaiDa, false)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="form-group">
            <label>Danh sách vắc-xin hoặc sinh phẩm được sử dụng (*)</label>
            <input class="form-control" type="text" asp-for="PhoiNhiem.DanhsachVacxin" />
        </div>

        <div class="form-group">
            <table class=" col table table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th></th>
                        <th width="60" class="text-center">Có</th>
                        <th width="60" class="text-center">Không</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Đến trang trại chăn nuôi / chợ buôn bán động vật sống / cơ sở giết mổ động vật / tiếp xúc động vật <span class="text-required" style="color:red;">(*)</span></td>
                        <td class="text-center"><input type="Radio" class="style-radio" name="fields[hasFever]" asp-for="PhoiNhiem.TiepXucDongVat" value="@true" data-msg-required="Bạn chưa chọn triệu chứng"></td>
                        <td class="text-center"><input type="Radio" class="style-radio" name="fields[hasFever]" asp-for="PhoiNhiem.TiepXucDongVat" value="@false"></td>
                    </tr>
                    <tr>
                        <td>Tiếp xúc gần ('2m') với người mắc bệnh viêm đường hô hấp do nCoV<span class="text-required" style="color:red;">(*)</span></td>
                        <td class="text-center"><input type="Radio" class="style-radio" name="fields[hasCough]" asp-for="PhoiNhiem.TiepXucNguoiNhiemCovic" value="@true" data-msg-required="Bạn chưa chọn triệu chứng"></td>
                        <td class="text-center"><input type="Radio" class="style-radio" name="fields[hasCough]" asp-for="PhoiNhiem.TiepXucNguoiNhiemCovic" value="@false"></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="row">
            <p style="color:red; font-size:18px">
                Dữ liệu bạn cung cấp hoàn toàn bảo mật và chỉ phục vụ cho việc phòng chống dịch, thuộc quản lý của Ban chỉ đạo quốc gia về Phòng chống dịch Covid-19. Khi bạn nhấn nút "Gửi" là bạn đã hiểu và đồng ý.
            </p>
        </div>
        <div class="btn-submit-box text-center">
            <button type="submit" class="btn btn-success">
                Gửi tờ khai
            </button>
        </div>
        

    </form>
</body>
</html>

@section Scripts{
    <script src="~/js/Create.js" asp-append-version="true"></script>
}
